<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:focusable="true"
              android:background="?android:attr/selectableItemBackground">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main3cardview"
        app:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/poicard_textview_details"
                android:layout_below="@+id/poicard_textview_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"/>

            <ImageView
                android:layout_height="120dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageView2"
                android:layout_width="400dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/poicard_textview_title"
                android:layout_marginTop="25dp"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/poicard_textview_details"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/arrow_down_float"
                android:layout_alignTop="@+id/poicard_textview_title"
                android:layout_alignParentStart="true"
                android:layout_marginStart="47dp"
                android:id="@+id/tripcard_expandIcon"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>